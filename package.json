{
  "name": "@hackbg/fadroma",
  "version": "100.0.0-pre",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/fadroma"
  },
  "main": "./index.ts",
  "type": "module",
  "dependencies": {
    "@types/node":     "^16.11.19",
    "@fadroma/ops":    "workspace:*",
    "@fadroma/scrt":   "workspace:*",
    "@fadroma/snip20": "workspace:*",
    "@hackbg/ganesha": "workspace:*",
    "@hackbg/toolbox": "workspace:*"
  },
  "devDependencies": {
    "c8":              "^7.11.0",
    "typedoc":         "^0.21.9",
    "typescript":      "^4.5.4",
    "@hackbg/runspec": "workspace:*"
  },
  "scripts": {
    "test": "time ganesha-node packages/TestRunner.js",
    "cov":  "time c8 --all -x deps -x packages/TestRunner.js -x **/*.spec.* -x **/*.d.ts -x **/*.old -x packages/ops/wip -x packages/shim ganesha-node packages/TestRunner.js"
  },
  "bin": {
    "fadroma": "fadroma.cjs"
  },
  "workspace": true,
  "packages": [
    "./deps/*",
    "./packages/*",
    "./crates/fadroma-snip20-impl"
  ]
}
