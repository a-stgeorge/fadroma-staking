{
  "name": "@hackbg/fadroma",
  "version": "100.0.0-pre",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/fadroma"
  },
  "main":    "index.ts",
  "browser": "index.browser.ts",
  "type": "module",
  "dependencies": {
    "@fadroma/client":            "workspace:./packages/client",
    "@fadroma/client-scrt-amino": "workspace:./packages/client-scrt-amino",
    "@fadroma/client-scrt-grpc":  "workspace:./packages/client-scrt-grpc",
    "@fadroma/ops":               "workspace:./packages/ops",
    "@fadroma/ops-scrt":          "workspace:./packages/ops-scrt",
    "@fadroma/tokens":            "workspace:./packages/tokens",

    "@hackbg/ganesha": "^2.0.3",
    "@hackbg/toolbox": "^3.0.1",
    "@hackbg/kabinet": "^2.0.1",
    "@types/node": "^16.11.34"
  },
  "devDependencies": {
    "@hackbg/runspec": "^2.1.0",
    "body-parser": "^1.20.0",
    "c8": "^7.11.2",
    "express": "^4.18.1",
    "freeport-async": "^2.0.0",
    "js-yaml": "^4.1.0",
    "pug": "^3.0.2",
    "typedoc": "^0.21.10",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "build": "tsc",
    "render": "node doc/render.js",
    "document": "typedoc index.ts",
    "test": "time ganesha-node spec/index.js",
    "cov": "Ganesha_NoSourceMap=1 time npx c8 -r text -n packages ganesha-node spec/index.js",
    "lcov": "Ganesha_NoSourceMap=1 time npx c8 -r lcov -n packages ganesha-node spec/index.js"
  },
  "bin": {
    "fadroma": "fadroma.cjs"
  },
  "workspace": true,
  "packages": [
    "./packages/*"
  ]
}
