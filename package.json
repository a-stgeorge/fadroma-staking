{
  "name": "@hackbg/fadroma",
  "version": "100.0.0-pre",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/fadroma"
  },
  "main": "./index.ts",
  "type": "module",
  "dependencies": {
    "@types/node":       "^16.11.19",
    "@fadroma/ops":      "workspace:*",
    "@fadroma/ops-scrt": "workspace:*",
    "@fadroma/snip20":   "workspace:*",
    "@hackbg/ganesha":   "workspace:*",
    "@hackbg/toolbox":   "workspace:*"
  },
  "devDependencies": {
    "@hackbg/runspec": "workspace:*",
    "c8":              "^7.11.0",
    "pug":             "^3.0.2",
    "js-yaml":         "^4.1.0",
    "typedoc":         "^0.21.9",
    "typescript":      "^4.5.4",
    "freeport-async":  "^2.0.0",
    "body-parser":     "^1.19.0",
    "express":         "^4.17.1"
  },
  "scripts": {
    "render":   "node doc/render.js",
    "document": "typedoc index.ts",
    "test":     "time ganesha-node spec/index.js",
    "cov":      "Ganesha_NoSourceMap=1 time c8 -r text --all -x coverage -x deps -x test.js -x **/*.spec.* -x **/*.d.ts -x **/*.old -x doc/example -x packages/ops/wip -x packages/scrt/wip -x packages/shim ganesha-node spec/index.js",
    "lcov":     "Ganesha_NoSourceMap=1 time c8 -r lcov --all -x coverage -x deps -x test.js -x **/*.spec.* -x **/*.d.ts -x **/*.old -x doc/example -x packages/ops/wip -x packages/scrt/wip -x packages/shim ganesha-node spec/index.js"
  },
  "bin": {
    "fadroma": "fadroma.cjs"
  },
  "workspace": true,
  "packages": [
    "./deps/*",
    "./packages/*",
    "./crates/fadroma-snip20-impl"
  ]
}
