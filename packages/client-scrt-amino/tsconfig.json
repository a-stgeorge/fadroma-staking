{
  "include": [
    "*.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ES2020"],

    "outDir":         "dist",
    "sourceMap":      true,
    "declaration":    true,
    "declarationMap": true
  }
}
